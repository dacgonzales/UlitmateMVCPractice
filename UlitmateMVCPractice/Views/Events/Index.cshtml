                        </td>

                        @*<td>
                                @Html.ActionLink("View Comments", "Create", "Comments", new {id=item.EventId},null)

                            </td>*@
                    </tr>
                </table>
            </div>

            <div class="row" style="margin-bottom:50px;">
                <div class="col-md-offset-3 col-md-6 col-md-offset-3">
                    <div class="row" style="text-align:center">
                        <div class="col-md-4">
                            @*<span class='badge pull-left bg-primary'>@item.CommentList.Count() comments</span>*@
                            @Html.ActionLink("Post comment", "Create", "Comments", new { id = item.EventId }, null)
                        </div>
                        <div class="col-md-4">
                            @Html.ActionLink("More details", "Create", "Comments", new { id = item.EventId })
                        </div>
                        <div class="col-md-4">
                            @Html.ActionLink("Take the survey", "Create", "Comments", new { id = item.EventId })
                        </div>
                    </div>
                </div>
            </div>
        </div>


    }



   
